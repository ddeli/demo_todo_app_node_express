<%- include('partials/header') %>

<div class="container features">
  
  <% if (locals.todaylist) { %>
    <div class="form-check form-floating" style="display: inline-block; width: 100%;">
      <%todaylist.forEach((item)=> { %>

      <form action="/submitchecked"
        method="POST"
        style="display: inline;" ;>
        <div >
        <input class="form-check-input"
          type="checkbox"
          value="<%= item._id %>"
          id="flexCheckDefault"
          name="checkboxTaskNumber"
          onClick="this.form.submit()" <% if(item.done){%> style="display: none; " checked <%} %>>

        <input type="text"
          readonly
          class="form-control" 
          id="floatingInput" 
          value="<%=item.name %>"  
          <% if(item.done){%>style="display: inline-block; max-width: 100%; background-color: #d1d1d1 !important"<%} %> >
        </div>
      </form>
      <%}) %>
    <% } %>
    </div>
      <form action="/submitToday" method="POST" style="padding-top: 10px;">

        <input class="form-control" style="background-color: white !important;"
          type="text"
          name="taskSubmitToday"
          placeholder="Enter New Task..."
          autofocus
        />
        
        <input type="submit"
          class="btn btn-primary btn-lg px-4 gap-3" 
          name="taskSubmit" 
          value="Submit" 
        />
      </form>
</div>

    <%- include('partials/footer') %>