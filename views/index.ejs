<%- include('partials/header') %>

<div class="container features">
  
    <% if (locals.todaylist) { %>
      <div class="form-check form-floating">
        <%todaylist.forEach((item)=> { %>
        
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
          <label class="form-check-label" for="flexCheckDefault">
          </label>
          <input type="text" readonly class="form-control" id="floatingInput" value="<%=item %>">
           
        <%}) %>
      <% } %>
      </div>
  
        <form action="/submitToday" method="POST" ;>
          <input class="form-control"
            type="text"
            name="taskSubmitToday"
            placeholder="Enter New Task..."
            autofocus
          />
          <input type="submit" class="btn btn-primary btn-lg px-4 gap-3" name="taskSubmit" value="Submit" />
        </form>
      
      
  </div>

<%- include('partials/footer') %>